(
~canonConfig = (
  cp: 48,
  melody: [
    (dur: 1, note: 60),
    (dur: 1, note: 62),
    (dur: 1, note: 63),
    (dur: 1, note: 65),
    (dur: 1, note: 63),
    (dur: 1, note: 67),
    (dur: 1, note: 68),
    (dur: 1, note: 70),
    (dur: 1, note: 65),
    (dur: 1, note: 75),
    (dur: 1, note: 74),
  ].lace(48),
  voices: [
    (tempo: 320, transp: 0),
    (tempo: 320*4, transp: 12),
    (tempo: 320*0.75, transp: -12),
    (tempo: 320*1.5, transp: 12)
  ]
);
~myCanon = ~convCanon.(~canonConfig);

~visualize.(~myCanon);


~myCanon
.canon //we extract the canon from the data structure that is returned
.collect(~instrument.([\dist,\dist,\dist,\dist2], amp: 1, repeat: 2)) // we pass each voice into our ~instrument. At this point ~instrument is returning a `MakePbind`, because it has been partially applied with `([Symbol], Amp, Repeat)`. This line will return: `[Pbind, Pbind, Pbind, Pbind]`
.do({|pbind| pbind.play});// finally we play each voice

)
